<div class="container">
  <h1 class="text-center">Areas</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="table-striped">
          <% @areas.each do |area| %>
            <tr>
              <td><%= area.name %></td>
              <td><%= area.city %></td>
              <td><%= area.state %></td>
              <td><%= link_to 'View', area %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Area', new_area_path %>
    </div>

  </div>
</div>