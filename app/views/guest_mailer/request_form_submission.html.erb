<h1>My Rent Will Buy has generated a new lead!</h1>

<p>
	Email: <%= @guest.email %><br />
	Source: My Rent Will Buy
</p>
<p>
	Beds: <%= @guest.beds %><br />
	Baths: <%= @guest.baths %><br />
	Areas of Interest: <%= @guest.areas %><br />
</p>
<p>
	Foreclosures? <%= @guest.foreclosures %><br />
	Short Sales? <%= @guest.short_sales %><br />
</p>

<h3>Searches Completed:</h3>

<% @guest.queries.each do | query | %>
<p>
	<% if query.area && query.payment %> 
		<%= "#{query.area.name}: $#{query.payment}" %>
	<% elsif query.area.blank? && query.payment %>
		<%= "(no area specified): $#{query.payment}" %>
	<% elsif query.payment.blank? && query.area %>
		<%= "#{query.area.name}: (no payment specified)" %>
	<% elsif query.area.blank? && query.payment.blank? %>
		<%= "no area or payment specified" %>
	<% end %>
		
</p>
<% end %>