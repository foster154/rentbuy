<div class="bg-cover-image container-fluid">
	<div class="row">

	<div class="col-sm-10 col-sm-offset-1 content-wrapper mar-top80 mar-bot80">

		<div class="mar-top10 mar-bot-10">
			<div class="col-xs-12 col-sm-10 col-sm-offset-1">
				<h1 class="text-center">Step 1 of 3: Basic Financial Info</h1>
			</div>
		</div>

		
			<div class="max-width-wrapper">

				<div class="mar-top80">
					<div class="col-md-5 col-md-offset-1">
						<div class="prequal-form-checkmarks">
							<%= image_tag "check-mark.png" %>
							<div class="checkmark-text">I have 20 seconds to calculate what I could afford!</div>
						</div>
						<div class="prequal-form-checkmarks">
							<%= image_tag "check-mark.png" %>
							<div class="checkmark-text">Email me loan info, including LOW and NO down options!</div>
						</div>
						<div class="prequal-form-checkmarks">
							<%= image_tag "check-mark.png" %>
							<div class="checkmark-text">I'd like lender info so I can contact them when I'm ready!</div>
						</div>
					</div>

					<div class="col-md-5 prequal-fp-form">

						<%= simple_form_for @guest do |f| %>

							  	<div class="row">
							  		<div class="col-md-6">
							  			<div class="prequalify-fp-field">
								  			Annual Income 
								  			<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="Your annual income is what you make before taxes. Your lender will use this number to determine how much you can afford.">
								  				<i class="fa fa-question-circle"></i>
								  			</span>
							  			</div>
							  		</div>
							  		<div class="col-md-6">
								  		<%= f.text_field :income, label: false, data: { role: 'money'} %>
								  	</div>
								</div>

								<div class="row mar-top10">
							  		<div class="col-md-6">
							  			<div class="prequalify-fp-field">
							  				Monthly Debt 
							  				<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="Include all debts with regular periodic payments such as car payments, student loans, minimum Credit Card Payments, Child Support Payments. Do NOT include any monthly rent or mortgage you are currently paying, Credit Card Payments you pay off every month.">
							  					<i class="fa fa-question-circle"></i>
							  				</span>
							  			</div>
							  		</div>
							  		<div class="col-md-6">
								  		<%= f.text_field :debt, label: false, data: { role: 'money'} %>
								  	</div>
								</div>

								<div class="row mar-top10">
							  		<div class="col-md-6">
							  			<div class="prequalify-fp-field">
							  				Down Payment
							  				<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="Your down payment directly effects how much you can afford! If you increase your down payment, you may be able to qualify for a larger loan.">
							  					<i class="fa fa-question-circle"></i>
							  				</span>
							  			</div>
							  		</div>
							  		<div class="col-md-6">
								  		<%= f.text_field :down_payment, label: false, data: { role: 'money'} %>
								  	</div>
								</div>

							<div class="form-actions mar-top50 text-center">
							<%= f.button :submit, "To Step 2 >>", class: "btn-rbsubmit" %>
							</div>
						<% end %>
						
						<div class="clear-both"></div>
					</div>
					
				</div>

			</div> <!-- /.max-width-wrapper -->
		</div>
	</div> <!-- /.row -->
</div>
