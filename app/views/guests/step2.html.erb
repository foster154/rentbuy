<div class="bg-cover-image container-fluid">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 content-wrapper mar-top50 mar-bot50">
			<div class="col-xs-12">
				<h1 class="text-center mar-top10">Step 2 of 3: Basic History</h1>
			</div>

			<div class="row prequal-form mar-top70">
				<%= simple_form_for @guest do |f| %>

					<%= f.input :session_id, :as => :hidden, :input_html => { :value => request.session_options[:id] } %>

					<div class="prequalify-field">
					  	<div class="row">
					  		<div class="col-xs-10 col-xs-offset-1">
					  			<h2>
						  			Have you had a short sale or foreclosure in the last 24 months?
						  			<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="Recent Short Sales or Foreclosures will affect your ability to get a loan.">
						  				<i class="fa fa-question-circle"></i>
						  			</span>
					  			</h2>
				  			</div>
					  	</div>
				  		<div class="row">
					  		<%= f.input :foreclosure_on_record, as: :radio_buttons, checked: false, label: false %>
					  	</div>
					</div>

					<div class="prequalify-field">
					  	<div class="row">
					  		<div class="col-xs-10 col-xs-offset-1">
					  			<h2>
						  			Do you need to sell your home before you buy?
						  			<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="You can use proceeds from a sale as part of your downpayment.">
						  				<i class="fa fa-question-circle"></i>
						  			</span>
					  			</h2>
				  			</div>
					  	</div>
				  		<div class="row">
					  		<%= f.input :sell_before_buy, as: :radio_buttons, checked: false, label: false %>
					  	</div>
					</div>

					<div class="prequalify-field">
					  	<div class="row">
					  		<div class="col-xs-10 col-xs-offset-1">
					  			<h2>
						  			Do you intend to buy within the next six months?
						  			<span class="has-popover" data-toggle="popover" data-placement="bottom" data-content="Home prices and interest rates constantly change, so buying in 6 months will look different than buying now.">
						  				<i class="fa fa-question-circle"></i>
						  			</span>
					  			</h2>
				  			</div>
					  	</div>
				  		<div class="row">
					  		<%= f.input :buy_within_six_months, as: :radio_buttons, checked: false, label: false %>
					  	</div>
					</div>

					<div class="form-actions mar-top50 text-center">
						<%= f.button :submit, "On To Step 3 >>", class: "btn-rbsubmit" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
