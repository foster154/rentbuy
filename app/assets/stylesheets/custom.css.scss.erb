	font-weight: 700;
	font-size: 13px;
	letter-spacing: .1em;
	text-transform: uppercase;
}

.nav>li>a:hover {
	color: $base_lt2;
	background: none;
}

.navbar-nav {
	float: right;
	margin-bottom: 0;
	padding-bottom:0;	
}

.navbar .navbar-nav > .active > a {
	color: $base_lt2;
}
.navbar .navbar-nav > .active > a {
	padding-bottom: 22px;
}

.navbar-brand {
	padding-top: 34px;
	font-size: 32px;
	color: #fff;
	font-weight: 300;
	text-shadow: none;

}

