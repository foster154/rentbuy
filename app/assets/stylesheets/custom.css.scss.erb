/*==========================================================================
  General
  ========================================================================== */
html {
	height:100%;
 	min-height:100%;
}

body {
	color:#777;
	background: white;
	font-size: 16px;
	line-height: 1.6em;
	font-weight: 300;
	text-shadow: none;
}

.clear {
	clear: both;
}

body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
	font-family: 'Lato', sans-serif;
}

h1,h2,h3,h4,h5,h6 {
	font-style: normal;
	margin: 0 0 20px 0;
}
h1 { 
	font-size: 32px; 
	line-height: 30px; 
	font-weight:300; 
	color: $ltblue;
}
h2 { 
	font-size: 24px; 
	color: $dkgray;
	font-weight: 300;
}
h3 { font-size: 24px; }
